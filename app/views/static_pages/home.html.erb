<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

  <div class="jumbotron">
    <div class="container-day">
          <div class="information">
            <div class="day_word">
              <% if @days_info %>
            <p>今日は、<%= Date.today.month %>月<%= Date.today.day %>日　 <span id="add1"><%= @days_info.main_keyword %></span><span id="add2">です！</span></p>
          <% else %>
            <p>今日は、<%= Date.today.month %>月<%= Date.today.day %>日　 <span id="add1">情報がありません</span><span id="add2">です！</span></p>
          <% end %>
            </div>
            <% if @days_info %>
          <article class="day-quiz">
            <div class="todays-quiz">
              <h2>Today’s quiz</h2>
              <p class="todays-quiz-text"><%= @days_info.quiz_question %></p>
              <p id="answer">正解を見る: <%= @days_info.quiz_answer %></p>
            </div>
            <div class="pick-up">
              <h2>今日は何する？</h2>
              <p class="pick-up-text"><%= @days_info.activity %></p>
            </div>
          </article>
          <article class="day-keyword">
            <h2>今日に関係する言葉</h2>
            <p class="today-keyword"><%= @days_info.sub_keyword %></p>
          </article>
        <% end %>
          </div>
          <div class="search-link">
            <%= link_to image_tag("ask-google.png", alt: "Googleに聞くのボタン", width: "250"),
                      "http://google.co.kr" %>
            <%= link_to image_tag("link-library.png", alt: "図書館リンクのボタン", width: "250"),
                      "https://www.ndl.go.jp/" %>
            <%= link_to image_tag("ask-chatgpt.png", alt: "ChatGPTに聞くのボタン", width: "250"),
                      "https://openai.com/chatgpt/" %>
          </div>
        </div>
  </div>

  <div class="center jumbotron">
  <h1>こちらにはSNS</h1>

  <h2>
 ポスト
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<% end %>